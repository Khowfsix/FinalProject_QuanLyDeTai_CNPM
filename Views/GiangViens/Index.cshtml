@model IEnumerable<QuanLyDeTai.Models.GiangVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách thông tin các giảng viên</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Tên giảng viên
        </th>
        <th>
            Loại giảng viên
        </th>
        <th>
            Mã giảng viên
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenGiangVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.loaiGiangVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maGiangVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.account_ID })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.account_ID })
                </td>
                <td>
                    @Html.ActionLink("Xóa", "Delete", new { id = item.account_ID })
                </td>
            }
        </tr>
    }

</table>
