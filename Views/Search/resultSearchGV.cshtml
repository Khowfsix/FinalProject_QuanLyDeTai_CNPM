@model IEnumerable<QuanLyDeTai.Models.GiangVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />

<h2 style="color:blue; display:flex;">Tìm kiếm</h2>

@using (Html.BeginForm("Index", "Search", FormMethod.Post, new { @class = "form-inline" }))
{


    <div class="form-group">
        <select class="form-control text-center" name="param_option" id="tim_kiem_tong_hop">
            <option value="timkiemgiangvien">Tìm kiếm giảng viên</option>
            <option value="timkiemsinhvien">Tìm kiếm sinh viên</option>
            <option value="timkiemdetai">Tìm kiếm đề tài</option>
        </select>
        <fieldset class="form-group">
            @*<legend>Chọn loại đề tài</legend>
                    @* @foreach (var item in Model)
                {
                    <input type="radio" name="group_loaidt" value="@item.maLoaiDeTai"> <span>@item.tenLoaiDeTai | @item.nienKhoa <br></span>
                }*@
        </fieldset>;
        <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập từ khóa">
        <input type="submit" class="btn btn-danger" value="Tìm kiếm">
    </div>
    <hr />
}

<h2>Kết quả tìm kiếm</h2>
@if (@Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Không tìm thấy giảng viêng
    </div>
}
else
{

    if(ViewBag.Keyword=="")
                {
                    <p>Không nhập từ khóa - Danh sách tất cả giảng viên </p>
                }    
    <p class="center-block" style="width: fit-content;">Tổng số kết quả: @Model.Count()</p>
    <table class="table">
        <tr>
            <th>
                Tên giảng viên
            </th>
            <th>
                Loại giảng viên
            </th>
            <th>
                Mã giảng viên
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenGiangVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.loaiGiangVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.maGiangVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>
                <td>
                    <a href="@Url.Action("Details", "GiangViens", new { id = item.account_ID })">Chi tiết </a>

                </td>
            </tr>
        }

    </table>

}
