@model QuanLyDeTai.Models.ThongBao

@{
    ViewBag.Title = "Tạo thông báo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<h2>Tạo thông báo mới</h2>
<div class="row">
    <div class="col-md-12">
        <form action="themThongBao" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="tieuDe">Tên tiêu đề</label>
                <input type="text" class="form-control" name="tieuDe" id="tieuDe" placeholder="" required>
            </div>
            <div class="form-group">
                <label for="tieuDe">Loại đề tài</label>
                <select class="custom-selectf form-control" name="loaiDeTai" required>
                    <option selected>Chọn loại đề tài</option>
                    @if (ViewData["loaiDeTai"]!=null)
                    {
                        foreach (QuanLyDeTai.Models.LoaiDeTai loaiDeTai in (List<QuanLyDeTai.Models.LoaiDeTai>)ViewData["loaiDeTai"])
                        {
                            <option value=@loaiDeTai.maLoaiDeTai>@loaiDeTai.tenLoaiDeTai</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="moTa">Mô tả</label>
                <input type="text" class="form-control" name="moTa" id="moTa" placeholder="" required>
            </div>
            <div class="form-group">
                <label for="noiDung">Nội dung</label>
                <textarea name="noiDung" id="noiDung" rows="3" class="form-control" required></textarea>
            </div>
            <div class="form-group">
                <input type="radio" id="html" name="trangthai" value="1" required>
                <label for="html">Hiệu lực</label><br>
                <input type="radio" id="css" name="trangthai" value="0" required>
                <label for="css">Hết hiệu lực</label><br>
            </div>
            <div class="form-group">
                <label>File đính kèm</label>
                <input type="file" class="form-control" name="file" />
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">Tạo thông báo mới</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>