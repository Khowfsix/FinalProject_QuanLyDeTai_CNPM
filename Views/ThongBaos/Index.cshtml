@model IEnumerable<QuanLyDeTai.Models.ThongBao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Role == "admin")
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách thông báo</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Tạo thông báo mới", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Tiêu đề thông báo
        </th>
        <th>
            Loại đề tài
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Ngày tạo
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tieuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiDeTai.tenLoaiDeTai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.moTa)
            </td>
            @if (item.trangThai == 1)
            {
                <td>
                    Còn hiệu lực
                </td>
            }
            else
            {
                <td>
                    Hết hiệu lực
                </td>
            }
            @*<td>
                <a href="~/Upload/@item.fileDinhKem">@Html.DisplayFor(modelItem => item.fileDinhKem)</a>
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ngayTao)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.maThongBao })
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { maThongBao = item.maThongBao })
                </td>
                <td>
                    @Html.ActionLink("Xóa", "XoaThongBao", new { id = item.maThongBao })
                </td>
            }
        </tr>
    }

</table>