@model QuanLyDeTai.Models.DeTai

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Admin"))
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết</h2>

<div>
    <h4>Chi tiết đề tài</h4>
    @if (User.IsInRole("Sinh viên") && Model.truongNhom == null)
    {
        @Html.ActionLink("Đăng ký đề tài", "SinhVienDangKy", new { maDeTai = Model.maDeTai }, new { @class = "btn btn-primary", style = "font-size: 20px;" })
    }

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên đề tài")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenDeTai)
        </dd>

        <dt>
            @Html.DisplayName("Mục tiêu")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mucTieu)
        </dd>

        <dt>
            @Html.DisplayName("Yêu cầu")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.yeuCau)
        </dd>

        <dt>
            @Html.DisplayName("Sản phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sanPham)
        </dd>

        <dt>
            @Html.DisplayName("Chú thích")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.chuThich)
        </dd>

        <dt>
            @Html.DisplayName("Số lượng sinh viên tối đa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soLuongSinhVienToiDa)
        </dd>

        <dt>
            @Html.DisplayName("Được đăng ký khác chuyên ngành")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duocDangKyKhacChuyenNganh)
        </dd>

        <dt>
            @Html.DisplayName("Niên khóa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nienKhoa)
        </dd>

        <dt>
            @Html.DisplayName("Điểm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.diem)
        </dd>

        <dt>
            @Html.DisplayName("MSSV trưởng nhóm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.truongNhom) | @Html.ActionLink("Danh sách thành viên", "DanhSachThanhVien", "Nhoms", routeValues: new { maDeTai = Model.maDeTai }, htmlAttributes: null)
        </dd>

        <dt>
            @Html.DisplayName("Giảng viên hướng dẫn")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.gvHuongDan)
        </dd>

        <dt>
            @Html.DisplayName("Trạng thái")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        <dt>
            @Html.DisplayName("Tên chuyên ngành")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChuyenNganh.tenChuyenNganh)
        </dd>

        <dt>
            @Html.DisplayName("Loại đề tài")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiDeTai1.tenLoaiDeTai)
        </dd>

    </dl>
</div>
<p>
    @{
        if (User.IsInRole("Admin, Trưởng Bộ Môn"))
        {
            if (Model.gvHuongDan == ViewBag.maGiangVien)
            {
                <span> @Html.ActionLink("Sửa", "Edit", new { id = Model.maDeTai }, htmlAttributes: new { Style = "Color: Green" }) |</span>
                <span> @Html.ActionLink("Xóa", "Delete", new { id = Model.maDeTai }, htmlAttributes: new { Style = "Color: Red" }) |</span>
            }

        }
    }

    @Html.ActionLink("Quay lại danh sách", "Index")
</p>
