                @Html.ValidationMessageFor(model => model.nienKhoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.hocKy, "Học kỳ", htmlAttributes: new { @class = "control-label col-md-2" })
